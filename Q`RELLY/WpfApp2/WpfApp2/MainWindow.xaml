        <Button x:Name="button4" Content="A loop" Grid.Column="1" Margin="165,52,183,64" Grid.Row="1" Height="24" Click="button4_Click" HorizontalAlignment="Center"/>
        <TextBlock x:Name="myLabel" HorizontalAlignment="Center" Text="TextBlock" VerticalAlignment="Center" Grid.ColumnSpan="2"  Grid.Row="2" FontFamily="BodyTextStyle" />

    </Grid>
</Window>
